extends ../../layouts/default.pug
block main 
    if (product.title)
        h1(class="mb-4") #{product.title}

    if (product.price)
        div(class="mb-4") Price: <b>#{product.price}$</b>

    if (product.discountPercentage)
        div(class="mb-4") Sale: <b>#{product.discountPercentage}%</b>

    if (product.stock)
        div(class="mb-4") Stock: <b>#{product.stock}</b>

    if (product.thumbnail)
        div(class="mb-4") Image: 
            img(
                src=product.thumbnail
                style="width: 100px"
            )

    if (product.status)
        div(class="mb-4")
            span Status:
            if (product.status === "In Stock")
                span(class="badge badge-success") In Stock
            else
                span(class="badge badge-danger") Out Stock
    if (product.position)
        div(class="mb-4") Postion: <b>#{product.position}</b>
    if (product.description)
        div(class="mb-4") #{product.description}
    
    a(
        href=`${prefixAdmin}/products/edit/${product.id}`
        class="btn btn-warning"
    ) Edit
    script(src="admin/js/product.js")